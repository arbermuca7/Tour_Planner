<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.control.TextField?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <children>
        <GridPane minHeight="150.0" minWidth="50.0" prefHeight="300.0" prefWidth="300.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <TextField fx:id="InputTextField" prefHeight="26.0" prefWidth="129.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="2">
                    <GridPane.margin>
                        <Insets left="-20.0" right="70.0" />
                    </GridPane.margin></TextField>
                <Button fx:id="ClickButton" mnemonicParsing="false" onAction="#calculateOutput" prefHeight="23.0" prefWidth="148.0" text=" Click me " GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowSpan="3">
                    <GridPane.margin>
                        <Insets left="-20.0" right="50.0" />
                    </GridPane.margin></Button>
                <Label fx:id="OutputLabel" prefHeight="38.0" prefWidth="157.0" text="Norbert is the 0 who clicked" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="2">
                    <GridPane.margin>
                        <Insets bottom="60.0" left="-20.0" />
                    </GridPane.margin>
                </Label>
            </children>
        </GridPane>
    </children>
    <columnConstraints>
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
    </rowConstraints>
</GridPane>
